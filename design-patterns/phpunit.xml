<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Abstract">
            <directory suffix="Test.php">./src/Creational/AbstractFactory/Tests</directory>
        </testsuite>
        <testsuite name="Builder">
            <directory suffix="Test.php">./src/Creational/Builder/Tests</directory>
        </testsuite>
        <testsuite name="FactoryMethod">
            <directory suffix="Test.php">./src/Creational/FactoryMethod/Tests</directory>
        </testsuite>
        <testsuite name="Pool">
            <directory suffix="Test.php">./src/Creational/Pool/Tests</directory>
        </testsuite>
        <testsuite name="Prototype">
            <directory suffix="Test.php">./src/Creational/Prototype/Tests</directory>
        </testsuite>
        <testsuite name="SimpleFactory">
            <directory suffix="Test.php">./src/Creational/SimpleFactory/Tests</directory>
        </testsuite>
        <testsuite name="Singleton">
            <directory suffix="Test.php">./src/Creational/Singleton/Tests</directory>
        </testsuite>
        <testsuite name="StaticFactory">
            <directory suffix="Test.php">./src/Creational/StaticFactory/Tests</directory>
        </testsuite>
        <!-- 结构型设计模式 -->
        <testsuite name="Adapter">
            <directory suffix="Test.php">./src/Structural/Adapter/Tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
